    android:id="@+id/nav_graph_principal"
    app:startDestination="@id/fragment_pagina_principal">

    <!-- Fragmento de la página principal con la lista de pisos -->
    <fragment
        android:id="@+id/fragment_pagina_principal"
        android:name="com.example.interfaces1_2trimestre.Fragment_pagina_principal"
        android:label="Página Principal"
        tools:layout="@layout/fragment_pagina_principal">
        <!-- Acción para navegar a los detalles del piso -->
        <action
            android:id="@+id/action_fragment_pagina_principal_to_fragment_detalles_piso"
            app:destination="@id/fragment_detalles_piso" />
        <action
            android:id="@+id/action_fragment_pagina_principal_to_fragment_usuario_perfil"
            app:destination="@id/fragment_usuario_perfil" />
        <action
            android:id="@+id/action_fragment_pagina_principal_to_fragment_aniadir_piso"
            app:destination="@id/fragment_aniadir_piso" />
    </fragment>

    <!-- Fragmento de usuario perfil -->
    <fragment
        android:id="@+id/fragment_usuario_perfil"
        android:name="com.example.interfaces1_2trimestre.Fragment_usuario_perfil"
        android:label="Perfil de Usuario"
        tools:layout="@layout/fragment_usuario_perfil">
        <!-- Acciones a otros fragmentos desde el perfil -->
        <action
            android:id="@+id/action_fragment_usuario_perfil_to_Fragment_aniadir_piso"
            app:destination="@id/fragment_aniadir_piso" />
        <action
            android:id="@+id/action_fragment_usuario_perfil_to_Fragment_suscripciones"
            app:destination="@id/fragment_suscripciones" />
        <action
            android:id="@+id/action_fragment_usuario_perfil_to_Fragment_ajustes"
            app:destination="@id/fragment_ajustes" />
        <action
            android:id="@+id/action_fragment_usuario_perfil_to_Fragment_editar_perfil"
            app:destination="@id/fragment_editar_perfil" />
        <action
            android:id="@+id/action_fragment_usuario_perfil_to_Fragment_login"
            app:destination="@id/fragment_login" />
    </fragment>

    <!-- Fragmento de ajustes -->
    <fragment
        android:id="@+id/fragment_ajustes"
        android:name="com.example.interfaces1_2trimestre.Fragment_ajustes"
        android:label="Ajustes"
        tools:layout="@layout/fragment_ajustes">
