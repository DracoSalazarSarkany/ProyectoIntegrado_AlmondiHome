<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/nombrebd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/editnombre"
                android:textColorHint="#B0B0B0"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="#e6e0e9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/ciudadbd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ciudadactual"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/city_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/editciudadactual"
                android:textColorHint="#B0B0B0"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="#e6e0e9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sitioweb"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/website_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/editweb"
                android:textColorHint="#B0B0B0"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="#e6e0e9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sobreti"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/about_edittext"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="@string/editsobreti"
                android:textColorHint="#B0B0B0"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:gravity="top|start"
                android:background="#e6e0e9" />

        </LinearLayout>

        <Button
            android:id="@+id/guardar_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/azul"
            android:padding="12dp"
            android:text="@string/btnpublicar"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>
