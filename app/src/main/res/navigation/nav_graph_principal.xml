<!-- Fragmento de añadir piso -->
    <fragment
        android:id="@+id/fragment_aniadir_piso"
        android:name="com.example.interfaces1_2trimestre.Fragment_aniadir_piso"
        android:label="Añadir Piso"
        tools:layout="@layout/fragment_aniadir_piso" >
        <action
            android:id="@+id/action_fragment_aniadir_piso_to_fragment_preguntas"
            app:destination="@id/fragment_preguntas" />
    </fragment>

    <!-- Fragmento de detalles del piso -->
    <fragment
        android:id="@+id/fragment_detalles_piso"
        android:name="com.example.interfaces1_2trimestre.Fragment_detalles_piso"
        android:label="Detalles del Piso"
        tools:layout="@layout/fragment_detalles_piso" >
        <action
            android:id="@+id/action_fragment_detalles_piso_to_fragment_resena"
            app:destination="@id/fragment_resena" />
        <action
            android:id="@+id/action_fragment_detalles_piso_to_fragment_preguntas"
            app:destination="@id/fragment_preguntas" />
    </fragment>

    <!-- Fragmento de editar perfil -->
    <fragment
        android:id="@+id/fragment_editar_perfil"
        android:name="com.example.interfaces1_2trimestre.Fragment_editar_perfil"
        android:label="Editar Perfil"
        tools:layout="@layout/fragment_editar_perfil" />

    <!-- Fragmento de login -->
    <fragment
        android:id="@+id/fragment_login"
        android:name="com.example.interfaces1_2trimestre.Fragment_login"
        android:label="Login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_fragment_login_to_fragment_register"
            app:destination="@id/fragment_register" />
    </fragment>

    <!-- Fragmento de registro -->
    <fragment
        android:id="@+id/fragment_register"
        android:name="com.example.interfaces1_2trimestre.Fragment_register"
        android:label="Registro"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_fragment_register_to_fragment_login"
            app:destination="@id/fragment_login" />
    </fragment>

    <!-- Fragmento de suscripciones -->
    <fragment
        android:id="@+id/fragment_suscripciones"
        android:name="com.example.interfaces1_2trimestre.Fragment_suscripciones"
        android:label="Suscripciones"
        tools:layout="@layout/suscripciones" />

    <!-- Fragmento de preguntas -->
    <fragment
        android:id="@+id/fragment_preguntas"
        android:name="com.example.interfaces1_2trimestre.Fragment_preguntas"
        android:label="Preguntas"
        tools:layout="@layout/fragment_preguntas" >
        <action
            android:id="@+id/action_fragment_preguntas_to_fragment_detalles_piso"
            app:destination="@id/fragment_detalles_piso" />
        <action
            android:id="@+id/action_fragment_preguntas_to_fragment_resena"
            app:destination="@id/fragment_resena" />
    </fragment>
    <fragment
        android:id="@+id/fragment_chat"
        android:name="com.example.interfaces1_2trimestre.Fragment_chat"
        android:label="Fragment_chat" />
    <fragment
        android:id="@+id/fragment_resena"
        android:name="com.example.interfaces1_2trimestre.Fragment_resena"
        android:label="fragment_resena"
        tools:layout="@layout/fragment_resena" >
        <action
            android:id="@+id/action_fragment_resena_to_fragment_detalles_piso"
            app:destination="@id/fragment_detalles_piso" />
    </fragment>
    <fragment
        android:id="@+id/fragment_favoritos"
        android:name="com.example.interfaces1_2trimestre.Fragment_favoritos"
        android:label="fragment_favoritos"
        tools:layout="@layout/fragment_favoritos" >
        <action
            android:id="@+id/action_fragment_favoritos_to_fragment_detalles_piso"
            app:destination="@id/fragment_detalles_piso" />
    </fragment>

